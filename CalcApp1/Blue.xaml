<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="#696969	"/>
    </Style>
    <Style x:Key="TextBlockStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="TextBlock.Foreground"  Value="#0000FF"/>
        <Setter Property="TextBlock.Background" Value="#00FFFF"/>
    </Style>
</ResourceDictionary>